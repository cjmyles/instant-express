{
  "name": "instant-express",
  "version": "1.0.0",
  "description": "Express boilerplate bundled with API routing, enabling the rapid development and deployment of applications on the Firebase platform.",
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase serve --only functions,hosting",
    "shell": "firebase functions:shell",
    "start": "npm run serve",
    "deploy": "firebase deploy --only functions,hosting",
    "deploy:staging": "firebase use staging && firebase deploy --only functions,hosting",
    "deploy:production": "firebase use production && firebase deploy --only functions,hosting",
    "logs": "firebase functions:log"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cjmyles/instant-express.git"
  },
  "keywords": [
    "javascript",
    "node",
    "express",
    "api",
    "firebase"
  ],
  "author": "Craig Myles",
  "license": "MIT",
  "dependencies": {
    "config": "^2.0.1",
    "express": "^4.16.3",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.0.5",
    "instant-express-core": "^0.0.1",
    "mysql": "^2.16.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "babel-eslint": "7.2.3",
    "eslint": "4.10.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "7.4.0",
    "prettier": "^1.13.7"
  },
  "engines": {
    "node": "8"
  }
}
